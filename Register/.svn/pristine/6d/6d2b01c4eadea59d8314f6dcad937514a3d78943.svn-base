<hr style="margin:1px;border:2px;margin:0"/>
<div class=container>
	<div class="body_div">
		<div class="photo_show left">
			<span><img src="pic/PhotoShow1.jpg" class="photo"></span>
		</div>
		<div class="login left">
			<form action="" method="" id="login">
				<div class="loginTitle">登陆</div>
				<div class="userName">
					<span class="loginMsg left">用户名：</span><input type="text" class="loginInput" name="userName">
				</div>
				<div class="password">
					<span class="loginMsg left">密码：</span><input type="password" class="loginInput" name="password">
				</div>
				<div class="notice">
					<span><input type="checkbox" name="rememberPwd">记住密码   </span><span>忘记密码</span>
				</div>
				<div class="sub_res">
					<div class="sub_res_blank left"></div>
					<input type="button" value="登陆" class="left login_btn"><input type="reset" value="重置" class="left reset_btn">
				</div>
				<div class="clear"></div>
			</form>
		</div>
		<div class="success hide">
			<span>登陆成功</span>
			<input type="button" value="确定"/>
		</div>
		<div class="clear"></div>
	</div>
</div>
<script type="text/javascript">
	loginPermission=false;
	window.onload=function(){
		opacityCount=0;opacityPer="0.01";state="fadeIn";photoNum=1;
		var s=setInterval("startChange()",50);
		if(loginPermission==true){
			$(".permission").addClass("hide");
		}
		$.ajax({
			type: "GET",
			dataType: "html",
			url: "http://202.121.197.111:84/Register/WebContent/loginCheck.jsp",
			data: "",
			success: function(msg){
				    if(msg==0){
				    }else{
						$(".permission").addClass("hide");
						$(".login").addClass("hide");
				    }
			},
			error:function(msg){
				alert("error:"+msg.responseText);
			}
		});
	};
	
	function login(){
		var ajaxUrl="http://202.121.197.111:84/Register/WebContent/login.jsp";	
		$.ajax({
			type: "POST",
			dataType: "html",
			url: ajaxUrl,
			data: $("#login").serialize(),
			success: function(data){
				if(data==0){
					alert("账号或密码错误，请重新输入");
				}else{
					$(".success").removeClass("hide");
					$(".success").addClass("show");
					$(".permission").addClass("none");
					loginPermission=true;
					$(".login").addClass("hide");
					window.location.reload();
				}
			},
			error:function(data){
				alert("error:"+data.responseText);
			}
		});
	}
	$("#login .login_btn").click(function(){
		login();
	});
	$(".loginInput").keyup(function(){
		if(window.event.keyCode == 13){
			login();
		}
	});
</script>
